<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/enginecontrol_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/knr_rover_logo" />

    <pl.edu.pw.meil.knr.JoystickView
        android:id="@+id/joystickView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wind_rose"
        android:layout_centerInParent="true"
        custom:JV_backgroundSizeRatio="90%"
        custom:JV_buttonImage="@drawable/gps"
        custom:JV_buttonSizeRatio="18%"
        custom:JV_fixedCenter="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_below="@id/joystickView"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/engineBtnOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/engine_on"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/engineBtnOFF"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/engine_off"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>